#################################################################################
# GLOBALS                                                                       #
#################################################################################

PYTHON_VERSION = 3.13

# Colors
GREEN  := \033[0;32m
YELLOW := \033[0;33m
BLUE   := \033[0;34m
RESET  := \033[0m

#################################################################################
# HELP                                                                          #
#################################################################################

.PHONY: help
help: ## Show this help message
	@echo "$(BLUE)Available commands:$(RESET)"
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | \
		awk 'BEGIN {FS = ":.*?## "}; \
		{printf "  $(GREEN)%-22s$(RESET) %s\n", $$1, $$2}'

#################################################################################
# COMMANDS                                                                      #
#################################################################################

.PHONY: start
start: ## Start
	docker compose up --build

.PHONY: stop
stop: ## Stop
	docker compose stop
